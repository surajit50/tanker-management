generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Updated Prisma Schema
model Taker {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  type     String
  name     String
  status   String    @default("AVAILABLE") // AVAILABLE, UNDER_MAINTENANCE
  bookings Booking[]

  @@map("takers")
}

model Booking {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  date    DateTime
  taker   Taker    @relation(fields: [takerId], references: [id])
  takerId String   @db.ObjectId

  @@map("bookings")
}
